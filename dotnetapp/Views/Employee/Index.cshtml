@model List<Employee>

<h2>Employee List</h2>

@using (Html.BeginForm("Search", "Employee", FormMethod.Get))
{
    <div class="input-group mb-3">
        <input type="text" name="query" class="form-control" placeholder="Search by ID or Name" aria-label="Search by ID or Name" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
}

<table class="table">
    <thead class="table">
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.id</td>
                <td>@emp.Name</td>
                <td>@emp.DOB</td>
                <td>@emp.Gender</td>
                <td>@emp.Department</td>   
                <td>@emp.Position</td>
                <td>@emp.salary</td>
                <td>@emp.Email</td>
                <td>@emp.phoneNumber</td>
                <td>@emp.Address</td>
                
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Employee</a>
